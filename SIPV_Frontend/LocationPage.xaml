<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SIPV_Frontend.Views.LocationPage"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <!--search bar-->
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Frame CornerRadius="16" BorderColor="Black" Padding="5" HasShadow="False" Margin="10">
                    <Entry Placeholder="Search..."  WidthRequest="350" MaximumWidthRequest="500"/>
                </Frame>
            </StackLayout>

            <!--zaenkrat image da se popravi realna mapa-->
            <ImageButton Source="Resources/Images/googlemaps.png" Clicked="ShowPopupButton_Clicked" Aspect="AspectFill"/>

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>